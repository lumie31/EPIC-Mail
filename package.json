{
  "name": "epicmail",
  "version": "1.0.0",
  "engines": {
    "node": "10.8.0"
  },
  "description": "A web application that helps people exchange messages/information over the internet",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon --exec babel-node ./server",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./server -s",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./build/index.js",
    "test": "nyc --reporter=html --reporter=text mocha server/__test__/*.js --require @babel/register --exit --timeout=5000",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lumie31/EPIC-Mail.git"
  },
  "author": "Olumide",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lumie31/EPIC-Mail/issues"
  },
  "homepage": "https://github.com/lumie31/EPIC-Mail#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^5.15.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "body-parser": "^1.18.3",
    "coveralls": "^3.0.3",
    "express": "^4.16.4",
    "mocha-lcov-reporter": "^1.3.0",
    "swagger": "^0.7.5",
    "swagger-ui-express": "^4.0.2"
  }
}
